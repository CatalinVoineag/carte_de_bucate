<%= turbo_frame_tag "receipe-table" do %> 
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Ingredients</th>
      </tr>
    </thead>
    <tbody>
      <% receipes.each do |receipe| %>
        <tr>
          <th scope="row">
            <%= link_to receipe.name, receipe_path(receipe), data: { turbo_frame: "_top" } %>
            <%= image_tag url_for(receipe.image), class: "img-thumbnail" %>
          </th>
          <th scope="row"><%= receipe.description%></th>
          <th scope="row">
            <%= receipe.ingredients.map(&:name).join(', ') %>
          </th>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %> 
