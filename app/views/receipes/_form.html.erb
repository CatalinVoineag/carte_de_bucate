<%= form_with(
  model: receipe,
  url:,
  method:,
  data: {
    controller: 'nested-form',
    nested_form_wrapper_selector_value: '.nested-form-wrapper'
  },
) do |form| %>
  <% if receipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(receipe.errors.count, "error") %> prohibited this receipe from being saved:</h2>

      <ul>
        <% receipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label :instructions, style: "display: block" %>
    <%= form.textarea :instructions %>
  </div>

  <h2>Ingredients</h2>
  <template data-nested-form-target="template">
    <% record = ReceipeIngredient.new %> 
    <% record.build_ingredient %> 
    <%= form.fields_for :receipe_ingredients, record, child_index: 'NEW_RECORD' do |receipe_ingredient_form| %>
      <%= render "ingredient", receipe_ingredient_form: receipe_ingredient_form %>
    <% end %> 
  </template>

  <%= form.fields_for :receipe_ingredients do |receipe_ingredient_form| %>
    <%= render "ingredient", receipe_ingredient_form: receipe_ingredient_form %>
  <% end %>

  <div data-nested-form-target="target"></div>

  <button type="button" data-action="nested-form#add">Add ingredient</button>

  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
