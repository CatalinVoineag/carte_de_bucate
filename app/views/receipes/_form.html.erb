<%= form_with model: receipe, url:, method: do |form| %>
  <% if receipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(receipe.errors.count, "error") %> prohibited this receipe from being saved:</h2>

      <ul>
        <% receipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label :instructions, style: "display: block" %>
    <%= form.textarea :instructions %>
  </div>

  Ingredients
  <%= form.fields_for :receipe_ingredients do |receipe_ingredient_form| %>
    <%= receipe_ingredient_form.hidden_field :id %> 

    <%= receipe_ingredient_form.fields_for :ingredient do |ingredient_form| %>
      <%= ingredient_form.hidden_field :id %> 

      <div>
        <%= ingredient_form.label :name, style: "display: block" %>
        <%= ingredient_form.text_field :name %>
      </div>
    <% end %> 

    <div>
      <%= receipe_ingredient_form.label :quantity, style: "display: block" %>
      <%= receipe_ingredient_form.number_field :quantity %>
    </div>

    <div>
      <%= receipe_ingredient_form.label :grams, style: "display: block" %>
      <%= receipe_ingredient_form.number_field :grams %>
    </div>
  <% end %> 

  <div>
    <%= form.submit %>
  </div>
<% end %>
